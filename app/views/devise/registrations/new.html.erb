<%= bootstrap_devise_error_messages! %>

<div id="section-one">
    <div id="section-sign-up" class="sign_up">
      <div class="row">
        <div  class="col-lg-6 col-lg-offset-3">
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" }) do |f| %>
          <div class="col-lg-6">
            <div class="input-group input-group-sm">
              <h5>First Name</h5>
              <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "First Name" %>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="input-group input-group-sm">
              <h5>Last Name</h5>
              <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="input-group input-group-sm">
              <h5>Email</h5>
              <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="input-group input-group-sm">
              <h5>Password</h5>
              <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="input-group input-group-sm">
              <h5>Password confirmation</h5>
              <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password confirmation" %>
            </div>
          </div>
          <div align="center" class="align">
            <%= f.submit t('.sign_up', :default => "Sign up"), class: "btn btn-success" %>
            <% end %>
          </div>
          <div align="center" class="align">
            <h4>Or with</h4>
            <hr>
          </div>
          <div align="center" class="col-lg-6">
            <button class="btn btn-md btn-primary">Google</button>
          </div>
          <div align="center" class="col-lg-6">
            <button class="btn btn-md btn-info">Twitter</button>
          </div>
        </div>
      </div>
    </div>
  </div>