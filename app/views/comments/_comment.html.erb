<%= div_for(comment) do %>
  <div class="media">
   <div class="media-body">
     <h5 class="media-heading" style="font-weight: bold;"><%= h(comment.title) %></h5>
     <p><%= h(comment.description) %></p>
     <p><small>Posted: <%= time_ago_in_words(comment.created_at) %> ago</small></p>
   </div>
  </div>
  <hr>
<% end %>
